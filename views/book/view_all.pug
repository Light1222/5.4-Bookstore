extends ../layout

block content
    h3 Books
    a(href='/books/add') Add New Book
    table
        thead
            tr
                th Book Cover
                th Title
                th # of pages
                th Authors
                th Publisher
                th Genre
                th Actions
        tbody
            each book in books
                tr
                    td
                        img.image(src= book.image)
                    td= book.title
                    td= book.page
                    td= book.authors
                    td= book.publisher
                    td= book.genre
                    td
                        a(href=`/books/profile/${book.id}`) View Book
                        a(href = `/books/delete/${book.id}`) Delete Book


