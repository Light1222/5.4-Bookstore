extends ../layout

block content
    h3 Books
    a(href='/books/add') Add New Book
    table
        thead
            tr
                th Title
                th Authors
                th Genre
        tbody
            each book in books
                tr
                    td= book.title
                    td= book.authors
                    td= book.genre
                    td
                        a(href=`/books/profile/${book.id}`) View Book


