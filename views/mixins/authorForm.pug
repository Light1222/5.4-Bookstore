mixin authorForm(author, saveUrl, cancelUrl)

    div.form-container
        form(action=saveUrl method='post')
            div.form-input
                label(for='first_name') First Name
                input(id='first_name' name='first_name' value= author.first_name)

            div.form-input
                label(for='last_name') Last Name
                input(id='last_name' name='last_name' value= author.last_name)

            div.form-input
                label(for='dob') DOB
                input(id='dob' name='dob' value= author.dob)

            //div.form-input
            //    label(for='book_written') Books Written
            //    input(id='book_written' name='book_written' value= author.book_written)

            div.form-buttons
                a.button(href=cancelUrl) Cancel
                button.button.primary(type='submit') Save